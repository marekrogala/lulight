mainColor = #FDC864

tabPhotoHeight = 48vw
widePhotoHeight = 44.5vw

#top-title
  background-color white
  line-height 0
  text-align center
  color mainColor
  width 100vw

  +desktop()
    font-size 6vw
    padding-top 1.25vw
    height 11.25vw

  +tablet()
    font-size 6.77vw
    padding-top 3.25vw
    height 16.25vw

  +mobile()
    font-size 10.77vw
    padding-top 3.25vw
    height 38.25vw

body
  font-weight 300
  background-color white
  font-size 1.2vw

  +mobile()
    font-size 3vw

html
  font-size 1.2vw

  +mobile()
    font-size 3vw

#main-photo-container
  position relative

  +tablet()
    height tabPhotoHeight

  +mobile()
    height 199.7vw

  +between(1050px, 1200px)
    height tabPhotoHeight

  +above(1200px)
    height widePhotoHeight

#photo
  position absolute

  +tablet()
    height tabPhotoHeight

  +mobile()
    height 75vw

  +between(1050px, 1200px)
    height tabPhotoHeight

  +above(1200px)
    height widePhotoHeight

#overlay
  position absolute
  height photoHeight

  +tablet()
    height tabPhotoHeight
    right 0

  +mobile()
    top 84vw
    height 115.7vw

  +between(1050px, 1200px)
    right 0
    height tabPhotoHeight

  +above(1200px)
    right 0
    height widePhotoHeight

#overlay-logo
  position absolute
  color white
  font-weight bold

  +desktop()
    left 7.5vw
    top 4.6vw
    font-size 4.6vw
    letter-spacing: 0.4vw

  +tablet()
    left 7.5vw
    top 4.6vw
    font-size 4.6vw
    letter-spacing: 0.4vw

  +mobile()
    left 8.5vw
    top 7.6vw
    font-size 6.6vw
    letter-spacing: 0.4vw

