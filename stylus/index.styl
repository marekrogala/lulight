mainColor = #FDC864

#everything
  background-color #f2f1f0
  width 100%

#top-title
  height 125px
  background-color white
  font-size 80px
  line-height 0
  text-align center
  color mainColor
  padding-top 5px

body
  font-weight 300
  background-color transparent

#container
  max-width 1250px
  margin auto

#main-photo-container
  position relative
  height 590px

#photo
